<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/static/css/mainpage.css" />

  <%- include('../common/include.ejs') %>
    <style>
      @font-face {
        font-family: "GmarketSansMedium";
        src: url("https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.1/GmarketSansMedium.woff") format("woff");
        font-weight: normal;
        font-style: normal;
      }
    </style>
    <!-- icon cdn  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>

<body>
  <% console.log(data)%>
  <%- include('../common/nav.ejs') %>
    <% for(let i=0; i < data.length ; i++) {%>
      <div class="box">
        <div class="card">
          <div class="profile">
            <div class="profileImg">
              <%= %>
            </div>
            <div class="profileName">
              <%= data[i].user.userID %>
            </div>
          </div>
          <% if(data[i].img_src){ %>
            <div class="slideBox">
              <div class="slideImg">
                <img src="../../<%= data[i].img_src %>" alt="" />
              </div>
            </div>
            <% } %>
              <div class="userWriting">
                <div>
                  <% let isHeart=false; %>
                  <% if(isLogin){ %>
                  <%  for(let j=0;j<data[i].likes.length; j++){ %>
                  <%    if(data[i].likes[j].user_id==user_id){ %>
                  <%      isHeart=true; %>
                  <% }}} %>
                  <% if(isHeart){ %>
                    <i class="heart-icon<%= data[i].id%> bi bi-heart-fill heart-icon" onclick="like(this, '<%= data[i].id %>')"></i>
                  <% }else{ %>
                    <i class="heart-icon<%= data[i].id%> bi bi-heart heart-icon" onclick="like(this, '<%= data[i].id %>')"></i>
                  <% } %>
                  좋아요 <%= data[i].likes.length %>개
                </div>
                <div>
                  <img src="/static/img/search.jpg" alt="자세히보기" class="search" title="확대" />
                </div>
                <div>
                  <img src="/static/img/send.jpg" alt="메세지보내기" class="sendMessage" title="메세지보내기" />
                </div>

                <div class="content-container">
                  <div class="content">
                    내용 : <%= data[i].content %> <br>
                      등록일 : <%= data[i].createdAt %> <br>
                        수정일 : <%= data[i].updatedAt %> <br>
                  </div>
                  <form name="editPost-form<%= data[i].id %>" class="display-none">
                    <input type="text" id="content" class="edit-content<%= data[i].id %>" /> <br />
                    <button type="button" onclick="editPostDo(this, '<%= data[i].id %>')">변경</button>
                    <button type="button" onclick="editPostCancel(this, '<%= data[i].id %>')">취소</button>
                  </form>
                </div>
                <div>
                  <% if(isLogin){if(user==data[i].user.userID){ %>
                  <div class="management-btn">
                    <button onclick="editPost(this, '<%= data[i].id %>')">수정하기</button>
                    <button onclick="deletePost(this, '<%= data[i].id %>')">삭제하기</button>
                  </div>
                  <% }} %>
                </div>
                <br /><br />
              </div>
              <div class="commentBox">
                <img src="/static/img/chat.jpg" alt="댓글창" class="comment" />
                <form name="uploadComment-form<%= data[i].id %>" class="uploadComment-form">
                  <input type="text" name="content" class="content" onfocus="this.placeholder=''"
                    onblur="this.placeholder='댓글달기'" placeholder="댓글달기" />
                  <button type="button" onclick="uploadComment(this, '<%= data[i].id %>')">댓글 등록</button><br>
                </form>
              </div>
        </div>
        <div class="filterColor"></div>


        <!-- ===================================== 확대 ===================================== -->


        <div class="hiddenBox">
          <div class="hiddenImg">
            <div class="halfImg">
              <img src="../../<%= data[i].img_src %>" alt="" />
            </div>
            <div class="hiddenComment">
              <div class="profile">
                <div class="profileImg">
                  <%= %>
                </div>
                <div class="profileName">
                  <%= data[i].user.userID %><hr>
                </div>
              </div>
              <% if(isLogin){if(user==data[i].user.userID){ %>
              <div class="management-btn">
                <button onclick="editPost(this, '<%= data[i].id %>')">수정하기</button>
                <button onclick="deletePost(this, '<%= data[i].id %>')">삭제하기</button>
              </div>
              <% }}%>
              <br />
              <div class="slideWriting">
                <div class="content">
                  <%= data[i].content %>                    
                  <hr>
                </div>
                <hr>
                <div class="comment">
                  <% for(let j=0; j<data[i].comments.length; j++){ %>
                    <%= data[i].comments[j].user.userID %> : 
                    <%= data[i].comments[j].content %><br>
                    <%= data[i].comments[j].createdAt %>
                    <%= data[i].comments[j].updatedAt %>
                    <% if(isLogin){if(user==data[i].comments[j].user.userID){ %>
                      <button type="button" onclick="editComment(this, '<%= data[i].id %>', '<%= data[i].comments[j].id %>')">댓글 수정</button><br>
                      <form name="editComment-form<%= data[i].id %><%= data[i].comments[j].id %>" class="editComment-form display-none">
                        <input type="text" id="content" class="edit-content<%= data[i].id %><%= data[i].comments[j].id %>"/> <br />
                        <button type="button" onclick="commentEditDo(this,  '<%= data[i].id %>', '<%= data[i].comments[j].id %>')">변경</button>
                        <button type="button" onclick="commentEditCancel(this,  '<%= data[i].id %>', '<%= data[i].comments[j].id %>')">취소</button>
                      </form>
                      <button type="button" onclick="deleteComment(this, '<%= data[i].comments[j].id %>')">댓글 삭제</button>
                    <% }}%>
                    <hr>
                  <% } %>
                </div>
              </div>

              <div class="slideComment">
                <div class="commentLike">
                  <div>
                    <% let isHeartHidden=false; %>
                    <% if(isLogin){ %>
                    <%  for(let j=0;j<data[i].likes.length; j++){ %>
                    <%    if(data[i].likes[j].user_id==user_id){ %>
                    <%      isHeartHidden=true; %>
                    <% }}} %>
                    <% if(isHeartHidden){ %>
                      <i class="heart-icon<%= data[i].id%> bi bi-heart heart-color" onclick="like(this, '<%= data[i].id %>')"></i>
                    <% }else{ %>
                      <i class="heart-icon<%= data[i].id%> bi bi-heart" onclick="like(this, '<%= data[i].id %>')"></i>
                    <% } %>
                    좋아요 <%= data[i].likes.length %>개
                    <button onclick="viewLikes(this, '<%= data[i].id %>')">좋아요한유저목록</button>
                    <div class="likedPeople<%= data[i].id %> display-none"></div>
                  </div>
                  <div>
                    <img src="/static/img/send.jpg" alt="메세지보내기" class="send" title="메세지보내기" />
                  </div>

                  <!-- <%= %> -->
                  <div class="inputBox">
                    <img src="/static/img/chat.jpg" alt="댓글창" class="inputComment" />
                    <form name="uploadComment-form<%= data[i].id %>" class="uploadComment-form">
                      <input type="text" name="content" class="content" onfocus="this.placeholder=''"
                        onblur="this.placeholder='댓글달기'" placeholder="댓글달기" />
                      <button type="button" onclick="uploadComment(this, '<%= data[i].id %>')">댓글 등록</button><br>
                    </form>
                  </div>
                </div>
              </div>
            </div>

            <img src="/static/img/close.jpg" alt="" class="close" />
          </div>
        </div>
      </div>


      <% } %>

        <script src="/static/js/mainpage.js"></script>
</body>

<!-- <script src="/static/js/test.js"></script> -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</html>